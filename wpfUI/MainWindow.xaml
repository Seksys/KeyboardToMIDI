<Window x:Name="wpfUI" x:Class="wpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardToMIDI.UI"
        mc:Ignorable="d"
        Title="Keyboard to MIDI Demo" Height="128" Width="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tbKeyLabel"  Grid.Column="0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center"  Text="Last Key"/>
        <TextBlock x:Name="tbKey"  Grid.Column="0" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"  Text=""/>
        <TextBlock x:Name="tbNoteLabel" Grid.Column="1" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center" FontWeight="Normal" Text="Last Note"/>
        <TextBlock x:Name="tbNote" Grid.Column="1" FontSize="84" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="ExtraBold" Text=""/>
    </Grid>
</Window>
